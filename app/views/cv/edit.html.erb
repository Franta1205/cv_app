<div class="px-6 py-24 lg:px-8">
  <div class="mx-auto max-w-4xl bg-white rounded-lg shadow-md p-8">
    <h2 class="text-3xl font-semibold text-gray-900 mb-4">Edit Your CV</h2>

    <%= form_with(model: @cv, local: true, url: cv_path(@cv), method: :patch) do |form| %>

      <%= csrf_meta_tags %>

      <div class="editor-container" data-controller="markdown">
        <%= form.text_area :content, rows: 20, id: "markdown-editor", class: "w-full h-96 p-4 text-sm text-gray-800 bg-white rounded border border-gray-300 shadow-inner" %>
      </div>

      <div class="mt-6 text-right">
        <%= form.submit "Save CV", class: "bg-indigo-600 text-white px-4 py-2 rounded shadow hover:bg-indigo-500 focus:ring" %>
      </div>
    <% end %>
  </div>
</div>